{
  "name": "papyrus",
  "productName": "Papyrus",
  "version": "0.1.0",
  "description": "Unofficial Dropbox Paper app",
  "main": "main.js",
  "license": "MIT",
  "repository": "morkro/papyrus",
  "bugs": {
    "url": "https://github.com/morkro/papyrus/issues"
  },
  "author": {
    "name": "Moritz Kr√∂ger",
    "email": "write@morkro.de",
    "url": "www.moritz.berlin"
  },
  "keywords": [
    "dropbox",
    "paper",
    "papyrus",
    "electron",
    "notes",
    "app"
  ],
  "scripts": {
    "lint": "eslint -f tap main.js",
    "start": "electron .",
    "build": "npm run build:macos && npm run build:linux && npm run build:windows",
    "build:macos": "electron-packager . --overwrite --asar --prune --ignore='^media$' --out=dist --platform=darwin --arch=x64 --icon=static/dropbox-osx.icns --app-bundle-id=com.morkro.papyrus --app-version=$npm_package_version",
    "build:linux": "electron-packager . --overwrite --prune --ignore='^media$' --out=dist --platform=linux --arch=x64 --app-bundle-id=com.morkro.papyrus --app-version=$npm_package_version",
    "build:windows": "electron-packager . --overwrite --asar --ignore='^media$' --out=dist --prune --platform=win32 --arch=ia32 --icon=static/dropbox-windows.ico --app-version=$npm_package_version --version-string.ProductName=$npm_package_productName"
  },
  "devDependencies": {
    "electron": "^1.4.12",
    "electron-packager": "^8.4.0",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3"
  },
  "dependencies": {
    "electron-config": "^0.2.1",
    "electron-debug": "^1.1.0"
  }
}
